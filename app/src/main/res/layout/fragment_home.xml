<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="120dp"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">

                <android.support.v7.widget.CardView
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:id="@+id/SliderDots"
                    android:layout_below="@+id/viewPager"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <customfonts.MyTextView_PTSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-11sp"
                    android:text="New Release"
                    android:textAllCaps="true"
                    android:layout_marginLeft="17dp"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />



                <View
                    android:layout_width="45dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/gradient"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/theaters_recycleview"
                    android:clipToPadding="false"
                    android:paddingTop="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>




                <customfonts.MyTextView_PTSans_Bold
                    android:id="@+id/more_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:lineSpacingExtra="-11sp"
                    android:text="View More"
                    android:textAllCaps="true"
                    android:layout_marginRight="23dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <View style="@style/Divider.Horizontal"/>






                <customfonts.MyTextView_PTSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-11sp"
                    android:text="TV SERIES"
                    android:textAllCaps="true"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="17dp"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/gradient"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/series_recycleview"
                    android:clipToPadding="false"
                    android:paddingTop="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <customfonts.MyTextView_PTSans_Bold
                    android:id="@+id/more_series"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:lineSpacingExtra="-11sp"
                    android:text="View More"
                    android:textAllCaps="true"
                    android:layout_marginRight="23dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <View style="@style/Divider.Horizontal"/>



                <customfonts.MyTextView_PTSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-11sp"
                    android:text="coming soon"
                    android:textAllCaps="true"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="17dp"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/gradient"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/comingsoon_recycleview"
                    android:clipToPadding="false"
                    android:paddingTop="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <customfonts.MyTextView_PTSans_Bold
                    android:id="@+id/more_coming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:lineSpacingExtra="-11sp"
                    android:text="View More"
                    android:textAllCaps="true"
                    android:layout_marginRight="23dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>