<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@drawable/curve_shape" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="41.3dp"
            android:layout_marginRight="17dp">


            <ImageView
                android:layout_width="23.6dp"
                android:layout_height="17.7dp"
                android:src="@drawable/menu" />

            <ImageView
                android:id="@+id/profile"
                android:layout_width="18.7dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_person_white_24dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:elevation="4dp"
            android:background="@drawable/roundshape"
            android:gravity="right"
            android:orientation="horizontal">


<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/head"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_marginRight="17dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                />-->

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">



                <customfonts.MyTextView_PTSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-11sp"
                    android:text="Now in theaters"
                    android:textAllCaps="true"
                    android:layout_marginLeft="17dp"
                    android:textColor="#263238"
                    android:textSize="15sp" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/gradient"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/theaters_recycleview"
                    android:clipToPadding="false"
                    android:paddingTop="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>



                <customfonts.MyTextView_PTSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="-11sp"
                    android:text="coming soon"
                    android:textAllCaps="true"
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="17dp"
                    android:textColor="#263238"
                    android:textSize="15sp" />

                <View
                    android:layout_width="45dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="7.5dp"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/gradient"/>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/comingsoon_recycleview"
                    android:clipToPadding="false"
                    android:paddingTop="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>